<div class="col-md-12">
	<div class="location">
		<%= link_to("New location", new_location_path, class: "btn btn-primary pull-right") %>
		<%= link_to("Return to the List", patients_path, class: "btn btn-primary pull-right") %>
	</div>
	<table class="table table-hover">
		<thead>
			<tr>
				<td>#</td>
				<td>Location Name</td>
				<td>Location Code</td>
			</tr>
		</thead>
		<tbody>
			<% @locations.each do |location| %>
				<tr>
					<td>#</td>
					<td><%= link_to(location.name, location_path(location)) %></td>
					<td><%= location.description %></td>
					<td>
							<%= link_to("Edit", edit_location_path(location), class: "btn btn-sm btn-default")%>
							<%= link_to("Delete", location_path(location),    class: "btn btn-sm btn-default", 
													method: :delete, data: { confirm: "Are you sure?" } )%>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>